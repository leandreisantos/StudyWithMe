<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_input_et">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_iv_nli"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/iv_dp_nli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_nli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_iv_nli"
        android:text="sample text"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_date_nli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_name_nli"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/tv_action_nli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_nli"
        app:layout_constraintLeft_toRightOf="@id/cv_iv_nli"
        android:layout_marginStart="10dp"
        android:text="sample text"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/tv_lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/tv_action_nli"
        app:layout_constraintLeft_toRightOf="@id/cv_iv_nli"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_title_nli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample text"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/tv_action_nli"
        app:layout_constraintLeft_toRightOf="@id/tv_lbl_int"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_lbl_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest:"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/tv_title_nli"
        app:layout_constraintLeft_toRightOf="@id/cv_iv_nli"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_int_nli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample text"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/tv_title_nli"
        app:layout_constraintLeft_toRightOf="@id/tv_lbl_int"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/tv_more_nli"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/delete_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>